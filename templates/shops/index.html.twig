{% extends 'base.html.twig' %}

{% block title %}Shops index{% endblock %}

{% block body %}
    <h1>Shops index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.id }}</td>
                <td>{{ shop.name }}</td>
                <td>{{ shop.description }}</td>
                <td>
                    <a href="{{ path('shops_show', {'id': shop.id}) }}">show</a>
                    <a href="{{ path('shops_edit', {'id': shop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shops_new') }}">Create new</a>
{% endblock %}
